{
    "manifest_version": 2,
    "name": "Citation Extension",
    "version": "1.0",
    "browser_action": {
      "default_popup": "index.html",
      "default_title": "Open the popup",
      "default_icon": "icons/favicon.ico"
    },
    "icons": {
      "16": "icons/favicon.ico"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content-script.js"]
      }
    ],
    "permissions": [
      "activeTab",
      "clipboardRead",
      "clipboardWrite"
    ]
  }
  
{
    "manifest_version": 2,
    "name": "SG Legal Citation Extension",
    "version": "1.0",
    "browser_action": {
      "default_popup": "index.html",
      "default_title": "Open the popup",
      "default_icon": "icons/scroll.svg"
    },
    "icons": {
      "48": "icons/scroll.svg"
    },
    "content_scripts": [
      {
        "matches": ["https://sso.agc.gov.sg/*"],
        "js": ["browser-polyfill.js", "content-scripts/sso.agc.gov.sg/index.js"]
      },
      {
        "matches": ["https://www.lawnet.sg/*"],
        "js": ["browser-polyfill.js", "content-scripts/lawnet/index.js"]
      }
    ],
    "background": {
      "scripts": ["background-scripts/index.js"]
    },
    "permissions": [
      "activeTab",
      "notifications",
      "contextMenus",
      "clipboardRead",
      "clipboardWrite",
      "storage"
    ]
  }
  